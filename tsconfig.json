{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "target": "es2022",
    "paths": {
      "settings/*": ["./src/settings/*"],
      "shims/*": ["./src/shims/*"],
      "types": ["./src/types/index.ts"],
      "utils/*": ["./src/utils/*"]
    }
  },
  "include": ["./ambient.d.ts", "src/**/*.ts"]
}
