{
  "name": "application-hotkeys",
  "description": "A GNOME Shell Extension that lets you launch, show, and hide applications through a single hotkey.",
  "version": "1",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aaimio/application-hotkeys"
  },
  "author": "aaimio <aaim@protonmail.com>",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/aaimio/application-hotkeys/issues"
  },
  "homepage": "https://github.com/aaimio/application-hotkeys",
  "scripts": {
    "build": "rm -rf dist && vite build",
    "build:i18n": "vite-node ./scripts/build-pot.ts",
    "format": "prettier --write '**/*.{json,md,ts}'",
    "lint": "eslint",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "9.36.0",
    "@girs/gjs": "4.0.0-beta.36",
    "@girs/gnome-shell": "49.0.1",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "eslint": "9.36.0",
    "gettext-extractor": "4.0.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.0",
    "prettier": "3.6.2",
    "typescript": "5.9.2",
    "typescript-eslint": "8.44.0",
    "vite": "7.1.7",
    "vite-node": "3.2.4",
    "vite-tsconfig-paths": "5.1.4"
  },
  "lint-staged": {
    "**/*.{json,md,ts}": "prettier --write",
    "**/*.ts": "eslint --fix"
  },
  "sideEffects": false
}
